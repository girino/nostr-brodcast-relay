# Nginx Configuration for Broadcast Relay
# This proxies WebSocket connections and HTTP requests to the relay service
# Copy this file to nginx.conf before starting with --profile clearnet

events {
    worker_connections 1024;
    use epoll;
}

http {
    # Upstream backend - the broadcast relay service
    upstream relay {
        server relay:3334;
        keepalive 32;
    }

    # Logging
    access_log /dev/stdout;
    error_log /dev/stderr warn;

    # Basic settings
    sendfile on;
    tcp_nopush on;
    tcp_nodelay on;
    keepalive_timeout 65;
    types_hash_max_size 2048;

    # Gzip compression for HTTP responses
    gzip on;
    gzip_vary on;
    gzip_types application/json text/plain;
    gzip_min_length 256;

    # Server block
    server {
        listen 80;
        server_name _;

        # Increase buffer sizes for WebSocket
        proxy_buffer_size 16k;
        proxy_buffers 8 16k;
        proxy_busy_buffers_size 32k;

        # WebSocket and HTTP requests
        location / {
            proxy_pass http://relay;
            proxy_http_version 1.1;
            
            # WebSocket upgrade headers
            proxy_set_header Upgrade $http_upgrade;
            proxy_set_header Connection "upgrade";
            
            # Standard proxy headers
            proxy_set_header Host $host;
            proxy_set_header X-Real-IP $remote_addr;
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
            proxy_set_header X-Forwarded-Proto $scheme;
            
            # Timeouts for long-lived WebSocket connections
            proxy_connect_timeout 7d;
            proxy_send_timeout 7d;
            proxy_read_timeout 7d;
            
            # Disable buffering for WebSocket
            proxy_buffering off;
            
            # Keep connection alive
            proxy_http_version 1.1;
            proxy_set_header Connection "";
        }

        # Health check endpoint
        location /health {
            access_log off;
            return 200 "OK\n";
            add_header Content-Type text/plain;
        }
    }
}
